<section style="padding-left:390px">

  <fieldset style="border-radius: 5px; padding: 5px; min-height:100px; width:500px;">
    <legend>Login</legend>
    <legend>
    <%= form_tag sessions_path do %> 
    <div>
      <%=label_tag "email" %><br>
      <%=text_field_tag "email" %> 
    </div>
    <div>
      <%=label_tag "password" %><br>
      <%=password_field_tag "password" %><br>
    </div>
    <br>
      <%=submit_tag "Login" %>
    <br>
    <% end %>
    <br>
    </legend>
  </fieldset>
</section>

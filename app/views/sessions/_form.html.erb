<div class="row", style="color:#8585AD">
 <hr style="width:95%">
  <div class="col-lg-6 col-md-offset-1">
     <h2 class="modal-title"><b>Sign In</b></h2>
     <hr>
    <%= form_tag sessions_path do %> 
      <%=label_tag "email" %><br>
      <%=text_field_tag "email", 'adam@mail.com', autofocus: true, style: "width: 400px"  %><br>
      <br>
      <%=label_tag "password" %><br>
      <%=password_field_tag "password", "", style: "width: 400px"  %><br>
      <br>
      <b><%=button_tag "Login", class: "btn btn-info"  %></b>
    <% end %>
    <br>
  </div>
</div>
  <div class="modal-footer">
   <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
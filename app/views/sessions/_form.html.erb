<div class="container">

  <h2> Login </h2>
  <%= form_tag sessions_path do %> 
  <div>
    <%=label_tag "email" %><br>
    <%=text_field_tag "email" %> 
  </div>
  <div>
    <%=label_tag "password" %><br>
    <%=password_field_tag "password" %><br>
  </div>
    <%=submit_tag "Login" %>

  <% end %>

</div>
    
<section>

    <fieldset style="border-radius: 1px; padding-left: 1px; min-height:110px; width:500px;">
        <legend>Sign Up</legend>
        <legend>
        <%= simple_form_for(@create_user) do |f| %>
        
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email %>
        <br>
        <%= f.text_field :email %>
        <br>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
        <br>   
        <%= f.label :confirmation %>
        <br>
        <%= f.password_field :password_confirmation %>
        <br>
        <br>
        <%= f.submit :submit %>
        <br>
        <br>
        <% end %>
        </legend>
    </fieldset>
</section>

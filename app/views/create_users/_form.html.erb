<form class="form-horizontal" role="form">

<%= simple_form_for(@create_user) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-group" >
    <%= f.label :name, "Full Name:", class: "col-md-2 control-label"  %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group" >
    <%= f.label :email, "Email:", class: "col-md-2 control-label"  %><br>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password:", class: "col-md-2 control-label"  %>
    <%= f.text_field :password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</form>
<div class="container">

    <h2> Sign In</h2>

    <%= simple_form_for(@create_user) do |f| %>
        
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>   
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <br>
        <%= f.submit :submit %>

    <% end %>

  
</div>
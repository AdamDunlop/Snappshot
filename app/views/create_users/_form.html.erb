    
<section style="margin: 10px;">

<fieldset style="border-radius: 5px; padding: 5px; min-height:100px; width:500px;">
    <legend>Sign Up</legend>
        <legend>
    <%= simple_form_for(@create_user) do |f| %>
        
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email %>
        <br>
        <%= f.text_field :email %>
        <br>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
        <br>   
        <%= f.label :confirmation %>
        <br>
        <%= f.password_field :password_confirmation %>
        <br>
        <br>
        <%= f.submit :submit %>

    <% end %>
    </legend>
    </fieldset>

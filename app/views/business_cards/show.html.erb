<p id="notice"><%= notice %></p>
<% if current_user %>
<div class="container"; style="width:1000px">
<%= form_for (@business_card), :html => {:class => "form-horizontal center"} do |f| %>
    <div style="form-group">
      <br>
      <% if @business_card.image %>
        <%= image_tag(@business_card.imageuri) %>
      <% else %>
        <%= f.file_field :image %>
      <% end %>
    <br>
    <br>    
    </div>
    <div class="col-sm-4">
      <%= f.text_area :ocr_text, 
                      size: "6x17", 
                      class: 'form-control', 
                      autofocus: true %>  
          </div> 

    <div class="col-md-5">
      <%= f.text_field :name, class: 'form-control', value: @full_named_parsed  %>     
      </div>
      <div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0;"> Full Name</div>
      <br>
      <br>
      <div class="col-md-5">
        <%= f.text_field :company, class: 'form-control', value: 'Company Name' %>
      </div>
      <div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0"> Company Name</div>
    <br>
    <br>
    <div class="col-md-5">
      <%= f.text_field :job_title, class: 'form-control', value: 'Job Title' %>
    </div><div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0"> Job Title</div>
    <br>
    <br>
   <div class="col-md-5">
      <%= f.text_field :phone, class: 'form-control', value: @phone_parsed %>
    </div><div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0"> Mobile</div>
    <br>
    <br>
    <div class="col-md-5">
      <%= f.text_field :work_number, class: 'form-control', value: 'Work' %>
    </div><div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0"> Work</div>
    <br>
    <br>
    <div class="col-md-5">
      <%= f.text_field :fax_number, class: 'form-control', placeholder: 'Fax' %>
    </div><div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0"> Fax</div>
    <br>
    <br>
    <div class="col-md-5"> 
      <%= f.text_field :email, class: 'form-control', value: @email_parsed %>
    </div><div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0"> Email</div>
    <br>
    <br>
    <div class="col-md-5">
      <%= f.text_field :company_address, class: 'form-control', value: @address_parsed %>
    </div><div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0"> Address</div>
    <br>
    <br>
    <div class="col-md-5">
    <%= f.text_field :company_website, class: 'form-control', placeholder: 'Website' %>
    </div><div class="glyphicon glyphicon-circle-arrow-left" style="color: #D1D1E0"> Website</div>
    <br>
    <div class="col-md-8">
    <br>
    <%= f.submit class: 'btn btn-success' %> 
    </div>
    <% end %>
  <% end %>
      <div style="col-md-5">
      <br>
      <br>
        <%= button_to 'Discard', @business_card, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <div style= "padding-left:15px">
        <%= button_to 'Go Back', business_cards_path, class: 'btn btn-info' %>
      </div>
      </div>
      </div>
    </div>
  </div>


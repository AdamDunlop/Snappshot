
<p id="notice"><%= notice %></p>
<% if current_user %>
<div class="container">
<%= simple_form_for (@business_card), :html => {:class => "form-horizontal center"} do |f| %>
    <div style="form-group">
      <br>
      <% if @business_card.image %>
        <%= image_tag(@business_card.imageuri) %>
      <% else %>
        <%= f.file_field :image %>
      <% end %>
    </div>
    
    <br>
    <div class="col-md-3">
    <%= f.text_area :ocr_text, size: "6x9", class: 'form-control', autofocus: true %>
    </div> 

    <div class="col-md-6">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Full Name'  %>
    </div>  
    <br>
    <div class="col-md-6">
    <%= f.text_field :company, class: 'form-control', placeholder: 'Company Name' %>
    </div>
    <br>
   <div class="col-md-6">
    <%= f.text_field :job_title, class: 'form-control', placeholder: 'Job Title' %>
    </div>
    <br>
    <div class="col-md-6">
    <%= f.text_field :phone, class: 'form-control', placeholder: 'Phone Number' %>
    </div>
    <br>
    <div class="col-md-6">
    <%= f.text_field :email, class: 'form-control', placeholder: 'Work Email' %>
    </div>
    <br>
    <div class="col-md-6">
    <%= f.text_field :company_address, class: 'form-control', placeholder: 'Company Address' %>
    </div>
    <br>
  <div class="col-md-8">
  <br>
    <%= f.submit %> 
    <%= button_to 'Discard', @business_card, method: :delete, data: { confirm: 'Are you sure?' } %>
    <br>
    <%= link_to 'Back', business_cards_path %>
  </div>
  <br>

  </div>

  <% end %>
  <% end %>

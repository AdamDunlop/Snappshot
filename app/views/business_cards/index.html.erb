  <div style="border-radius: 5px; padding-left: 150px; padding-right: 150px; color:#666699">
    <h2>Business Cards</h2>
    <br>
      <table class="table table-striped">
        <thead>
          <tr>
          <th><u><b>Contact  ____________________________________________</u></b></th>
            <th><u>Contact Information ___________________________________________</u></th>
            <th data-field="edit" data-align="right"><u>Edit/Delete</u></th>
          </tr>
        </thead>
    <tbody>
      <% if @business_cards.length > 0 %> 
      <% @business_cards.each do |business_card| %>
          <td><%= image_tag(business_card.image) %></td>
          <td><b>Full Name: </b><%= business_card.name %><br>
            <b>Company Name: </b><%= business_card.company %><br>
            <b>Job Title: </b><%= business_card.job_title %><br>
            <b>Contact Phone: </b><a style="color:#666699" href="tel:+1<%= business_card.phone %>"><%= business_card.phone %></a><br>
            <b>Email: </b><a style="color:#666699"  href="mailto:<%= business_card.email %>"><%= business_card.email %></a><br>
            <b>Address(map): </b><%= business_card.company_address %><br> 
          </td>
          <td>
          <ol><%= link_to 'Edit', edit_business_card_path(business_card) %></ol>
          <ol><%= link_to 'Destroy', business_card, method: :delete, data: { confirm: 'Are you sure?' } %></ol>   
          </td>
      
        </tr>
    </tbody>
        <% end %>
        <% else %>
        <td colspan="9">NO Business Cards</td>
        <% end %>
  </table>
      <%= button_to 'Add a New Businesscard', new_business_card_path, id: 'button', class: "btn btn-info btn-lg", :method => :get %>


<p id="notice"><%= notice %></p>


<table class="table table-striped">
  <div class="container">
  <h2>Business Cards</h2>
<% @business_cards.each do |business_card| %>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Information</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= image_tag(business_card.image.url) %></td>
        <td><%= business_card.name %></td>
        <td><%= business_card.company %></td>
        <!--  <td><%= business_card.job_title %></td>
        <td><%= business_card.phone %></td>
        <td><%= business_card.email %></td>
        <td><%= business_card.company_address %></td> -->
        <td><%= business_card.ocr_text %></td>
        <td>
        <ol><%= link_to 'Show', business_card %></ol>
        <ol><%= link_to 'Edit', edit_business_card_path(business_card) %></ol>
        <ol><%= link_to 'Destroy', business_card, method: :delete, data: { confirm: 'Are you sure?' } %></ol>
         </td>   
      </tr>
    </div>
  </tbody>
</table>
<% end %>
<%= link_to 'New Business card', new_business_card_path %>


